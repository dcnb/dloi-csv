---
# metadata for json export
---
{%- assign items = site.data[site.metadata] -%}
{%- assign fields = site.data.theme.metadata-export-fields | split: "," -%}
{ "objects": [
    {%- for item in items -%}
    { 
        {% for f in fields %}{% if item[f] %}{{ f | jsonify }}: {{ item[f] | jsonify }},{% endif %}
        {% endfor %}"reference_url": {{ "/items/" | append: item.objectid | append: ".html" | absolute_url | jsonify }}, "object_download": {{ item.download | jsonify }}, "object_thumb": {{ item.img_thumb | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
] }
